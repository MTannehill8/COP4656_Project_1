<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#540000"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.project_1.MainActivity$PlaceholderFragment" >

    <TextView
        android:id="@+id/tvStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/line04"
        android:layout_alignRight="@+id/line04"
        android:layout_below="@+id/btnBottom_left"
        android:layout_marginTop="5dp"
        android:text="Press Play to Start"
        android:textAlignment="center"
        android:gravity="center"
        android:textColor="#CDC092"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btnTop_left"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignTop="@+id/btnTop_center"
        android:layout_toLeftOf="@+id/line01"
        android:layout_marginRight="5dp"
        android:visibility="invisible" 
        android:enabled="false" />
    
    <Button
        android:id="@+id/btnTop_center"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:visibility="invisible" 
        android:enabled="false" />

    <Button
        android:id="@+id/btnTop_right"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignTop="@+id/btnTop_center"
        android:layout_toRightOf="@+id/line02"
        android:layout_marginLeft="5dp"
        android:visibility="invisible" 
        android:enabled="false" />

    <Button
        android:id="@+id/btnCenter_left"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignLeft="@+id/btnTop_left"
        android:layout_below="@+id/line03"
        android:layout_marginTop="5dp"
        android:visibility="invisible" 
        android:enabled="false" />
    
    <Button
        android:id="@+id/btnCenter_center"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignTop="@+id/btnCenter_left"
        android:layout_centerHorizontal="true"
        android:visibility="invisible" 
        android:enabled="false" />
    
    <Button
        android:id="@+id/btnCenter_right"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignTop="@+id/btnCenter_left"
        android:layout_alignLeft="@+id/btnTop_right"
        android:visibility="invisible" 
        android:enabled="false" />
    
    <Button
        android:id="@+id/btnBottom_left"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignLeft="@+id/btnTop_left"
        android:layout_below="@+id/line04"
        android:layout_marginTop="5dp"
        android:visibility="invisible" 
        android:enabled="false" />
    
    <Button
        android:id="@+id/btnBottom_center"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignTop="@+id/btnBottom_left"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/line04"
        android:visibility="invisible" 
        android:enabled="false" />

    <Button
        android:id="@+id/btnBottom_right"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignTop="@+id/btnBottom_left"
        android:layout_alignLeft="@+id/btnTop_right"
        android:visibility="invisible" 
        android:enabled="false" />

    <Button
        android:id="@+id/line01"
        android:layout_width="5dp"
        android:layout_height="270dp"
        android:layout_alignTop="@+id/btnTop_center"
        android:layout_toLeftOf="@+id/btnTop_center"
        android:background="#000000"
        android:layout_marginRight="5dp"
        android:enabled="false" />

    <Button
        android:id="@+id/line02"
        android:layout_width="5dp"
        android:layout_height="270dp"
        android:layout_alignTop="@+id/btnTop_center"
        android:layout_toRightOf="@+id/btnTop_center"
        android:background="#000000"
        android:layout_marginLeft="5dp"
        android:enabled="false" />

    <Button
        android:id="@+id/line03"
        android:layout_width="270dp"
        android:layout_height="5dp"
        android:layout_below="@+id/btnTop_center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:background="#000000" />

    <Button
        android:id="@+id/line04"
        android:layout_width="270dp"
        android:layout_height="5dp"
        android:layout_below="@+id/btnCenter_center"
        android:layout_alignLeft="@+id/line03"
        android:layout_marginTop="5dp"
        android:background="#000000" />

    <Button
        android:id="@+id/btnPlayNewGame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvP1Score"
        android:layout_alignLeft="@+id/line04"
        android:layout_toLeftOf="@+id/btnResetScore"
        android:text="Play New Game"
        android:textColor="#CDC092"
        android:textSize="15sp" />

    <Button
        android:id="@+id/btnResetScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btnPlayNewGame"
        android:layout_alignTop="@+id/btnPlayNewGame"
        android:layout_toRightOf = "@+id/line01"
        android:layout_toLeftOf="@+id/line02"
        android:textColor="#CDC092"
        android:textSize="15sp"
        android:text="Reset Score" />

    <Button
        android:id="@+id/btnOnePlayer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btnPlayNewGame"
        android:layout_alignTop="@+id/btnPlayNewGame"
        android:layout_alignRight="@+id/line04"        
        android:layout_toRightOf="@+id/btnResetScore"        
        android:text="Make 1 Player"
        android:textSize="15sp"
        android:textColor="#CDC092"
        android:visibility="invisible" />

    <Button
        android:id="@+id/btnTwoPlayer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btnPlayNewGame"
        android:layout_alignTop="@+id/btnPlayNewGame"
        android:layout_alignRight="@+id/line04"        
        android:layout_toRightOf="@+id/btnResetScore"
        android:text="Make 2 Players"
        android:textSize="15sp"
        android:visibility="visible"
        android:textColor="#CDC092" />

    <TextView
        android:id="@+id/tvP1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/line04"
        android:layout_alignRight="@+id/btnBottom_left"
        android:layout_below="@+id/tvStatus"
        android:text="Player 1"
        android:gravity="center"
        android:textSize="15sp"
        android:textColor="#CDC092" />

    <TextView
        android:id="@+id/tvP2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnBottom_right"
        android:layout_alignRight="@+id/line04"
        android:layout_below="@+id/tvStatus"
        android:text="Player 2"
        android:gravity="center"
        android:textSize="15sp"
        android:textColor="#CDC092" />

    <TextView
        android:id="@+id/tvP2Score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnBottom_right"
        android:layout_alignRight="@+id/line04"
        android:layout_below="@+id/tvP2"
        android:text="0"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="#CDC092" />

    <TextView
        android:id="@+id/tvTie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/btnBottom_center"
        android:layout_below="@+id/tvStatus"
        android:layout_toRightOf="@+id/line01"
        android:textColor="#CDC092"
        android:gravity="center"
        android:textSize="15sp"
        android:text="Tie" />

    <TextView
        android:id="@+id/tvP1Score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/line04"
        android:layout_alignRight="@+id/btnBottom_left"
        android:layout_below="@+id/tvP1"
        android:textColor="#CDC092"
        android:gravity="center"
        android:textSize="20sp"
        android:text="0" />

    <TextView
        android:id="@+id/tvTieScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvTie"
        android:layout_alignRight="@+id/tvTie"
        android:layout_below="@+id/tvTie"
        android:textColor="#CDC092"
        android:gravity="center"
        android:textSize="20sp"
        android:text="0" />

    <TextView
        android:id="@+id/tvAuthor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnPlayNewGame"
        android:layout_below="@+id/btnResetScore"
        android:layout_alignRight="@+id/btnTwoPlayer"
        android:gravity="center"
        android:text="created by: Matthew Tannehill"
        android:textAlignment="center"
        android:textColor="#CDC092" />

</RelativeLayout>